@model CV_siten.Models.ViewModels.Account.CreateAccountViewModel

@{
    ViewData["Title"] = "Skapa konto";
}

<div class="main-box welcome-area create-account-card">
    <h2>Skapa ett nytt konto</h2>
    <p>Fyll i dina uppgifter för att börja bygga din profil.</p>
    <hr />

    @* Formuläret postas till AccountController. *@
    <form asp-controller="Account" asp-action="CreateAccount" method="post" enctype="multipart/form-data">

        @* Visar övergripande felmeddelanden som inte hör till ett specifikt fält *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* Sektion för uppladdning av profilbild *@
        <div class="form-group mb-4 text-center">
            <label class="d-block mb-2 fw-bold">Profilbild</label>

            <div id="profile-image-preview" class="mb-2 create-account-image-placeholder">
                Ingen bild
            </div>

            @* Input för filval. 'accept' begränsar så användaren bara ser bildfiler *@
            <input type="file" asp-for="ImageFile" id="imageInput" class="form-control mt-2" accept="image/*" />
            <span id="imageFileError" class="text-danger" style="display:none;"></span>
            <small class="text-muted">Ladda upp en bild för att göra din profil mer personlig.</small>
        </div>

        @* Namnuppgifter uppdelade i två kolumner för bättre layout *@
        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                @* Visar specifika valideringsfel för förnamn *@
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        @* Kontaktuppgifter *@
        <div class="form-group mt-2">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="row mt-2">
            <div class="col-md-6 form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-2">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        @* Yrkestitel och beskrivning *@
        <div class="form-group mt-2">
            <label asp-for="JobTitle" class="control-label"></label>
            <input asp-for="JobTitle" class="form-control" placeholder="t.ex. Systemutvecklare" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @* Lösenordshantering *@
        <div class="row mt-2">
            <div class="col-md-6 form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary w-100">Registrera konto</button>
        </div>
    </form>

    <div class="mt-3 text-center">
        <p>Har du redan ett konto? <a asp-action="Login">Logga in här</a></p>
    </div>
</div>

@* Laddar in skript för validering på klientsidan (ger direkt feedback utan omladdning) *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
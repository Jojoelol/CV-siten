@model List<CV_siten.Data.Models.Message>

@{
    ViewData["Title"] = "Mina meddelanden";
}

<div class="background">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">

                <div class="yellow-box p-4 message-card">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0">Mina meddelanden</h2>

                        <button type="button"
                                class="btn-action btn-primary btn-small"
                                data-bs-toggle="modal"
                                data-bs-target="#sendMessageModal">
                            Skicka meddelande
                        </button>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover message-table">
                            <thead>
                                <tr>
                                    <th>Från</th>
                                    <th>Ämne</th>
                                    <th>Datum</th>
                                    <th>Status</th>
                                    <th>Åtgärder</th>
                                </tr>
                            </thead>
                            <tbody data-open-send-modal="@(ViewData["OpenSendModal"] as bool? == true ? "true" : "false")">
                                @if (Model != null && Model.Count > 0)
                                {
                                    foreach (var m in Model)
                                    {
                                        <tr class="@(m.IsRead ? "" : "table-light") message-row"
                                            data-from="@(m.Sender?.FirstName + " " + m.Sender?.LastName)"
                                            data-sender-id="@m.SenderId"
                                            data-subject="@m.Subject">

                                            <td data-bs-toggle="modal" data-bs-target="#readMessageModal">
                                                <strong>
                                                    @(m.Sender != null
                                                                                                ? m.Sender.FirstName + " " + m.Sender.LastName
                                                                                                : m.SenderName + " (extern)")
                                        </strong>
                                    </td>

                                            <td data-bs-toggle="modal" data-bs-target="#readMessageModal">@m.Subject</td>
                                            <td data-bs-toggle="modal" data-bs-target="#readMessageModal">@m.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                                            <td data-bs-toggle="modal" data-bs-target="#readMessageModal">
                                        @if (m.IsRead)
                                                {
                                                    <span class="badge message-badge-read">Läst</span>
                                                }
                                                else
                                                {
                                                    <span class="badge message-badge-new">Nytt</span>
                                                }
                                            </td>

                                            <td class="message-actions">
                                                @if (!m.IsRead)
                                                {
                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-dark btn-mark-read"
                                                            data-id="@m.Id">
                                                        Markera läst
                                                    </button>
                                                }

                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger ms-2 btn-delete-message"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteMessageModal"
                                                        data-id="@m.Id"
                                                        data-from="@(m.Sender?.FirstName + " " + m.Sender?.LastName)"
                                                        data-subject="@m.Subject">
                                                    X
                                                </button>
                                            </td>

                                            <td class="message-content u-hidden">@m.Content</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-5">
                                            <i>Du har inga fler meddelanden just nu.</i>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <partial name="SendMessageModal" />
            </div>
        </div>

        <!-- Läs meddelande -->
        <div class="modal fade" id="readMessageModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="readMessageFrom"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <div id="readMessageContent" class="u-prewrap"></div>
                    </div>

                    <div class="modal-footer">
                        <button type="button"
                                class="btn-action btn-primary btn-small"
                                id="replyBtn">
                            Svara
                        </button>

                        <button type="button"
                                class="btn-action btn-outline btn-small"
                                data-bs-dismiss="modal">
                            Stäng
                        </button>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

<!-- Ta bort meddelande -->
<div class="modal fade" id="deleteMessageModal" tabindex="-1" aria-labelledby="deleteMessageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="deleteMessageModalLabel">Ta bort meddelande</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Stäng"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2">Är du säker på att du vill ta bort meddelande?</p>
                <div class="text-muted" id="deleteMessageInfo"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>

                <form action="/Message/Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteMessageId" />
                    <button type="submit" class="btn btn-danger">Ta bort</button>
                </form>
            </div>

        </div>
    </div>
</div>

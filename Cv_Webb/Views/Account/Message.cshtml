@model List<CV_siten.Data.Models.Message>

@{
    ViewData["Title"] = "Mina meddelanden";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            
            <!--TEST -->
            <div class="mb-3">
                <button type="button"
                        class="btn btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#sendMessageModal">
                    Skicka meddelande
                </button>
            </div>
            <div class="yellow-box p-4" style="border: 2px solid #ffd800; border-radius: 8px; background-color: #fffbe6;">
                <h2 class="mb-4">Mina meddelanden</h2>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Från</th>
                                <th>Ämne</th>
                                <th>Datum</th>
                                <th>Status</th>
                                <th>Åtgärder</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var m in Model)
                                {
                                    <tr class="@(m.IsRead ? "" : "table-light") message-row"
                                        role="button"
                                        data-bs-toggle="modal"
                                        data-bs-target="#readMessageModal"
                                        data-from="@(m.Sender?.FirstName + " " + m.Sender?.LastName)">

                                        <td><strong>@m.Sender?.FirstName @m.Sender?.LastName</strong></td>
                                        <td>@m.Subject</td>
                                        <td>@m.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            @if (m.IsRead)
                                            {
                                                <span class="badge bg-secondary">Läst</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">Nytt</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!m.IsRead)
                                            {
                                                <form asp-controller="Message" asp-action="MarkRead" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@m.Id" />
                                                    <button class="btn btn-sm btn-outline-dark">Markera läst</button>
                                                </form>
                                            }
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger ms-2 btn-delete-message"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteMessageModal"
                                                    data-id="@m.Id"
                                                    data-from="@(m.Sender?.FirstName + " " + m.Sender?.LastName)"
                                                    data-subject="@m.Subject">
                                                X
                                            </button>
                                        </td>
                                        <td style="display:none;" class="message-content">
                                            @m.Content
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-5">
                                        <i>Du har inga fler meddelanden just nu.</i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Skicka meddelande -->
    <div class="modal fade" id="sendMessageModal" tabindex="-1" aria-labelledby="sendMessageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <form asp-controller="Message" asp-action="Send" method="post">
                    @Html.AntiForgeryToken()

                    <div class="modal-header">
                        <h5 class="modal-title" id="sendMessageModalLabel">Skicka meddelande</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Stäng"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Sök mottagare (förnamn / efternamn)</label>

                            <input id="receiverSearch"
                                   class="form-control"
                                   type="text"
                                   placeholder=""
                                   autocomplete="off" />

                            <input type="hidden"
                                   id="receiverId"
                                   name="ReceiverId"
                                   value="@(ViewData["SendReceiverId"] ?? "")" />

                            <div id="receiverSelected" class="form-text mt-2"></div>

                            <div id="receiverResults" class="list-group mt-2"></div>

                            @Html.ValidationMessage("ReceiverId", "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ämne</label>
                            <input class="form-control"
                                   type="text"
                                   name="Subject"
                                   value="@(ViewData["SendSubject"] ?? "")"
                                   required />
                            @Html.ValidationMessage("Subject", "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Meddelande</label>
                            <textarea class="form-control"
                                      name="Content"
                                      rows="4"
                                      required>@(ViewData["SendContent"] ?? "")</textarea>
                            @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
                        </div>

                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                        <button type="submit" class="btn btn-primary">Skicka</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class="modal fade" id="readMessageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="readMessageFrom"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div id="readMessageContent" style="white-space: pre-wrap;"></div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Stäng
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteMessageModal" tabindex="-1" aria-labelledby="deleteMessageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="deleteMessageModalLabel">Ta bort meddelande</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Stäng"></button>
            </div>

            <div class="modal-body">
                <p class="mb-2">Är du säker på att du vill ta bort meddelande?</p>
                <div class="text-muted" id="deleteMessageInfo"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>

                <form action="/Message/Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteMessageId" />
                    <button type="submit" class="btn btn-danger">Ta bort</button>
                </form>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <script>
        (function () {
            const searchInput = document.getElementById('receiverSearch');
            const resultsEl = document.getElementById('receiverResults');
            const receiverIdEl = document.getElementById('receiverId');

            if (!searchInput) return;

            let timer = null;

            function clearResults() {
                resultsEl.innerHTML = "";
            }

            function setSelected(person) {
            receiverIdEl.value = person.id;
            searchInput.value = person.name;
            clearResults();
            }

            async function search(q) {
                const res = await fetch(`/Message/SearchPerson?q=${encodeURIComponent(q)}`, {
                    headers: { "Accept": "application/json" }
                });
                if (!res.ok) return [];
                return await res.json();
            }

            function render(items) {
                clearResults();

                if (!items || items.length === 0) return;

                for (const p of items) {
                    const a = document.createElement('button');
                    a.type = "button";
                    a.className = "list-group-item list-group-item-action d-flex align-items-center gap-2";

                    const img = document.createElement('img');
                    img.src = p.imageUrl || "/img/default-avatar.png";
                    img.alt = p.name;
                    img.style.width = "32px";
                    img.style.height = "32px";
                    img.style.borderRadius = "50%";
                    img.style.objectFit = "cover";

                    const span = document.createElement('span');
                    span.textContent = p.name;

                    a.appendChild(img);
                    a.appendChild(span);

                    a.addEventListener('click', () => setSelected(p));
                    resultsEl.appendChild(a);
                }
            }

            searchInput.addEventListener('input', function () {
                const q = (searchInput.value || "").trim();

         
                receiverIdEl.value = "";

                clearTimeout(timer);
                if (q.length < 2) {
                    clearResults();
                    return;
                }

                timer = setTimeout(async () => {
                    const items = await search(q);
                    render(items);
                }, 200);
            });
        })();
    </script>
    <script>
        document.addEventListener('click', function (e) {
            const row = e.target.closest('.message-row');
            if (!row) return;

            const from = row.getAttribute('data-from') || '';
            const content = row.querySelector('.message-content')?.textContent || '';

            document.getElementById('readMessageFrom').textContent = "Från: " + from;
            document.getElementById('readMessageContent').textContent = content;
        });
    </script>
    <script>
        document.addEventListener('click', function (e) {
            const btn = e.target.closest('.btn-delete-message');
            if (!btn) return;

            const id = btn.getAttribute('data-id');
            document.getElementById('deleteMessageId').value = id;
        });
    </script>

}


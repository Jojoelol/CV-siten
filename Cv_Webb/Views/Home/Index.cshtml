@model IEnumerable<CV_siten.Data.Models.Person>

@{
    ViewData["Title"] = "Startsida";
}

<div class="background home-page">

    @* --- Välkomstområde --- *@
    <div class="welcome-area mb-4 home-welcome">
        <h2 class="home-welcome-title">Välkommen till CV-siten</h2>
        <p class="home-welcome-text">
            Här kan du hitta kompetenta utvecklare och spännande projekt.
        </p>
    </div>

    @* --- Senaste projektet (G-krav 1) --- *@
    <div class="project-highlight-area mb-5 home-latest-project">
        @* --- UPPDATERAD RUBRIKRAD --- *@
        <div class="home-latest-project-header">
            <h4 class="home-latest-project-title">
                Senaste projektet
            </h4>
            <a asp-controller="Project"
               asp-action="AllProjects"
               class="btn btn-sm btn-outline-primary home-latest-project-link">
                Visa alla projekt <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>

        @if (ViewBag.SenasteProjekt != null)
        {
            <div class="home-latest-project-card">
                <h5 class="home-latest-project-name">@ViewBag.SenasteProjekt.ProjectName</h5>
                <p class="home-latest-project-desc">@ViewBag.SenasteProjekt.Description</p>

                <div class="home-latest-project-footer">
                    <small class="text-muted">
                        Startade: @ViewBag.SenasteProjekt.StartDate.ToString("yyyy-MM-dd")
                    </small>

                    <a asp-controller="Project"
                       asp-action="ProjectDetails"
                       asp-route-id="@ViewBag.SenasteProjekt.Id"
                       class="btn btn-sm btn-outline-primary">
                        Läs mer
                    </a>
                </div>
            </div>
        }
        else
        {
            <p class="text-center text-muted">Inga projekt registrerade ännu.</p>
        }
    </div>

    @* --- Sektionstitel (Ändras beroende på om man är inloggad eller ej) --- *@
    <h4 class="text-white mb-4 home-section-title">
        @ViewBag.SectionTitle
    </h4>

    @* --- Urval av CV:n (G-krav 1) --- *@
    <div class="profile-grid-container home-profile-grid">
        @foreach (var person in Model)
        {
            <div class="profile-card home-profile-card">
                <div class="home-profile-card-topbar"></div>

                <div class="p-4 text-center">

                    @* --- Profilbild --- *@
                    @if (!string.IsNullOrEmpty(person.ImageUrl))
                    {
                        <img src="~/images/ProfilePicture/@person.ImageUrl"
                             class="home-profile-img"
                             alt="Profilbild för @person.FirstName" />
                    }
                    else
                    {
                        <div class="home-profile-img-fallback">
                            <i class="fas fa-user"></i>
                        </div>
                    }

                    <h5 class="home-profile-name">
                        @person.FirstName @person.LastName
                    </h5>

                    <p class="home-profile-jobtitle">
                        @person.JobTitle
                    </p>

                    @* --- Matchningsprocent (Visas endast om data finns, t.ex. när man är inloggad) --- *@
                    @if (ViewBag.MatchData != null && ViewBag.MatchData.ContainsKey(person.Id))
                    {
                        <div class="match-badge mb-3 home-match-badge">
                            <i class="fas fa-bullseye"></i> @ViewBag.MatchData[person.Id]% Matchning
                        </div>
                    }

                <div class="home-profile-descbox">
                    <p class="text-muted small mb-0 home-profile-desc">
                        @(string.IsNullOrEmpty(person.Description)
                                                ? "Ingen beskrivning tillgänglig."
                                                : person.Description)
                    </p>
                </div>

                    <a asp-controller="Person"
                       asp-action="Profile"
                       asp-route-id="@person.Id"
                       class="btn btn-primary w-100 home-profile-btn">
                        Visa profil
                    </a>

                </div>
            </div>
                }
    </div>
</div>

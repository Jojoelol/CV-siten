@model IEnumerable<CV_siten.Data.Models.Project>

<div class="background all-projects-page">
    <div class="projects-block all-projects-wrapper">
        <h2 class="all-projects-title">Alla Projekt</h2>

        @* --- VERKTYGSFÄLT (Sök & Sortering) --- *@
        <form asp-action="AllProjects" method="get" class="content-toolbar all-projects-toolbar">
            <div class="all-projects-toolbar-row">

                @* 1. SÖKFÄLT *@
                <div class="all-projects-search-col">
                    <label class="small fw-bold text-muted all-projects-label">Sök projekt eller ägare:</label>
                    <input type="text" name="searchString" value="@ViewBag.CurrentSearch"
                           placeholder="Skriv här..." class="form-control-custom all-projects-input">
                </div>

                @* 2. SORTERING *@
                <div class="all-projects-sort-col">
                    <label class="small fw-bold text-muted all-projects-label">Sortera efter:</label>
                    <select name="sortBy" class="form-select-custom all-projects-input" onchange="this.form.submit()">
                        <option value="">Standard (A-Ö)</option>
                        <optgroup label="Namn">
                            <option value="name_asc" selected="@(ViewBag.CurrentSort == "name_asc")">Namn: A-Ö</option>
                            <option value="name_desc" selected="@(ViewBag.CurrentSort == "name_desc")">Namn: Ö-A</option>
                        </optgroup>
                        <optgroup label="Status">
                            <option value="status_aktivt" selected="@(ViewBag.CurrentSort == "status_aktivt")">Visa Aktiva först</option>
                            <option value="status_avslutat" selected="@(ViewBag.CurrentSort == "status_avslutat")">Visa Avslutade först</option>
                        </optgroup>
                        <optgroup label="Popularitet">
                            <option value="members_desc" selected="@(ViewBag.CurrentSort == "members_desc")">Flest deltagare</option>
                        </optgroup>
                        <option value="tid" selected="@(ViewBag.CurrentSort == "tid")">Nyast först</option>
                    </select>
                </div>

                @* 3. KNAPP-KOLUMN (Fixerad höjd för att förhindra "hopp") *@
                <div class="all-projects-buttons-col">

                    <button type="submit" class="btn-action btn-primary all-projects-search-btn">
                        <i class="fas fa-search all-projects-btn-icon"></i> Sök
                    </button>

                    @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentSort))
                    {
                        <a asp-action="AllProjects" class="btn-action all-projects-clear-btn">
                            <i class="fas fa-times all-projects-btn-icon"></i> Rensa
                        </a>
                    }
                    else
                    {
                        <div class="all-projects-clear-spacer"></div>
                    }
                </div>

            </div>
        </form>

        @if (!Model.Any())
        {
            <div class="all-projects-empty">
                <i class="fas fa-folder-open all-projects-empty-icon"></i>
                <h3 class="all-projects-empty-title">Det finns inga projekt att visa</h3>
                <p class="text-muted">Just nu finns det inga projekt registrerade i systemet.</p>

                <div class="mt-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Project" asp-action="AddProject" class="btn btn-primary all-projects-empty-create">
                            <i class="fas fa-plus"></i> Skapa ett nytt projekt
                        </a>
                    }
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tillbaka till start</a>
                </div>
            </div>
        }
        else
        {
            <div class="projects-grid all-projects-grid">
                @foreach (var project in Model)
                {
                    bool isMember = project.PersonProjects != null &&
                    ViewBag.CurrentPersonId != null &&
                    project.PersonProjects.Any(pp => pp.PersonId == (int)ViewBag.CurrentPersonId);

                    <div class="project-card all-projects-card">

                        <a asp-action="ProjectDetails" asp-route-id="@project.Id" class="all-projects-card-link">
                            <div class="project-card-image all-projects-card-image">
                                <img class="all-projects-card-img"
                                     src="@Url.Content(string.IsNullOrEmpty(project.ImageUrl)
                                                                               ? "~/images/projects/defaultbildProjekt.jpg"
                                                                               : "~/images/projects/" + project.ImageUrl)"
                             alt="@project.ProjectName" />
                    </div>

                            <div class="all-projects-card-head">
                                <span class="all-projects-card-name">@project.ProjectName</span>
                                <span class="all-projects-card-owner">
                                    <i class="fas fa-user-shield all-projects-owner-icon"></i>
                                    Ägare: @project.Owner?.FirstName @project.Owner?.LastName
                                </span>
                            </div>
                        </a>

                        <div class="all-projects-card-body">
                            <div class="all-projects-details-grid">
                                <div><i class="fas fa-layer-group"></i> <strong>Typ:</strong> @(project.Type ?? "Webb")</div>

                                <div>
                                    <i class="fas fa-circle all-projects-status-dot @(project.Status == "Aktivt" ? "is-active" : "is-inactive")"></i>
                                    <strong>Status:</strong> @(project.Status ?? "Aktivt")
                                </div>

                                <div><i class="fas fa-calendar-alt"></i> <strong>Start:</strong> @project.StartDate.ToString("yyyy-MM-dd")</div>
                                <div><i class="fas fa-calendar-check"></i> <strong>Slut:</strong> @(project.EndDate.HasValue? project.EndDate.Value.ToString("yyyy-MM-dd") : "Pågående")</div>
                            </div>

                            <div class="all-projects-card-footer">
                                <div class="all-projects-members-badge">
                                    <i class="fas fa-users"></i> @(project.PersonProjects?.Count ?? 0) deltagare
                                </div>

                        @if (User.Identity.IsAuthenticated)
                                {
                                    if (isMember)
                                    {
                                        <button class="btn btn-sm all-projects-member-btn" disabled>
                                            <i class="fas fa-check"></i> Är med
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button"
                                                class="btn btn-success btn-sm all-projects-join-btn"
                                                data-join-project-id="@project.Id"
                                                data-join-project-name="@project.ProjectName">
                                            Gå med
                                        </button>
                                    }
                                }
                            </div>
                        </div>

                    </div>
                }
            </div>
        }
    </div>
</div>

@* --- MODAL FÖR ATT ANGE ROLL --- *@
<div class="modal fade" id="joinRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header all-projects-modal-header">
                <h5 class="modal-title">Ange din roll</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="JoinProject" asp-controller="Project" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p id="modalProjectText" class="fw-bold"></p>
                    <input type="hidden" name="projectId" id="modalProjectId" />

                    <div class="mb-3">
                        <label class="form-label">Vad är din roll i detta projekt?</label>
                        <input type="text" name="role" class="form-control" placeholder="t.ex. Frontend-utvecklare, Tester..." required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                    <button type="submit" class="btn btn-success">Gå med</button>
                </div>
            </form>

        </div>
    </div>
</div>

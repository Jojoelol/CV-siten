@model IEnumerable<CV_siten.Data.Models.Project>

<div class="background" style="padding: 40px;">
    <div class="projects-block" style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <h2 style="color: #002d5a; margin-bottom: 25px; border-bottom: 2px solid #3498db; display: inline-block;">Alla Projekt</h2>

        @* --- VERKTYGSFÄLT (Sök & Sortering) --- *@
        <form asp-action="AllProjects" method="get" class="content-toolbar" style="margin-bottom: 30px;">
            <div style="display: flex; gap: 15px; align-items: flex-end; flex-wrap: wrap;">

                @* 1. SÖKFÄLT *@
                <div style="flex: 1; min-width: 200px;">
                    <label class="small fw-bold text-muted" style="display: block; margin-bottom: 5px;">Sök projekt eller ägare:</label>
                    <input type="text" name="searchString" value="@ViewBag.CurrentSearch"
                           placeholder="Skriv här..." class="form-control-custom"
                           style="width: 100%; margin: 0; padding: 10px; border-radius: 8px; border: 1px solid #ddd; height: 40px;">
                </div>

                @* 2. SORTERING *@
                <div style="width: 220px;">
                    <label class="small fw-bold text-muted" style="display: block; margin-bottom: 5px;">Sortera efter:</label>
                    <select name="sortBy" class="form-select-custom" onchange="this.form.submit()"
                            style="width: 100%; margin: 0; padding: 10px; border-radius: 8px; border: 1px solid #ddd; height: 40px;">
                        <option value="">Standard (A-Ö)</option>
                        <optgroup label="Namn">
                            <option value="name_asc" selected="@(ViewBag.CurrentSort == "name_asc")">Namn: A-Ö</option>
                            <option value="name_desc" selected="@(ViewBag.CurrentSort == "name_desc")">Namn: Ö-A</option>
                        </optgroup>
                        <optgroup label="Status">
                            <option value="status_aktivt" selected="@(ViewBag.CurrentSort == "status_aktivt")">Visa Aktiva först</option>
                            <option value="status_avslutat" selected="@(ViewBag.CurrentSort == "status_avslutat")">Visa Avslutade först</option>
                        </optgroup>
                        <optgroup label="Popularitet">
                            <option value="members_desc" selected="@(ViewBag.CurrentSort == "members_desc")">Flest deltagare</option>
                        </optgroup>
                        <option value="tid" selected="@(ViewBag.CurrentSort == "tid")">Nyast först</option>
                    </select>
                </div>

                @* 3. KNAPP-KOLUMN (Fixerad höjd för att förhindra "hopp") *@
                <div style="display: flex; flex-direction: column; gap: 5px; width: 110px; min-height: 85px; justify-content: flex-end;">

                    @* Sök-knapp *@
                    <button type="submit" class="btn-action btn-primary"
                            style="width: 100%; height: 40px; margin: 0; padding: 0; display: flex; align-items: center; justify-content: center; border-radius: 8px; border: none; font-weight: bold;">
                        <i class="fas fa-search" style="margin-right: 6px;"></i> Sök
                    </button>

                    @* Rensa-knapp (Visas bara vid sökning, annars reserveras utrymmet med en div) *@
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentSort))
                    {
                        <a asp-action="AllProjects" class="btn-action"
                           style="width: 100%; height: 40px; margin: 0; padding: 0; background-color: #e74c3c; color: white; text-decoration: none; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 0.9rem; font-weight: bold;">
                            <i class="fas fa-times" style="margin-right: 6px;"></i> Rensa
                        </a>
                    }
                    else
                    {
                        <div style="height: 40px; width: 100%;"></div>
                    }
                </div>
            </div>
        </form>

        @if (!Model.Any())
        {
            <div style="text-align: center; padding: 60px 20px; background: #f8f9fa; border-radius: 15px; border: 2px dashed #dee2e6; margin-top: 20px;">
                <i class="fas fa-folder-open" style="font-size: 4rem; color: #cbd5e0; margin-bottom: 20px; display: block;"></i>
                <h3 style="color: #4a5568; font-weight: bold;">Det finns inga projekt att visa</h3>
                <p class="text-muted">Just nu finns det inga projekt registrerade i systemet.</p>

                <div class="mt-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Project" asp-action="AddProject" class="btn btn-primary" style="background-color: #002d5a; border: none; padding: 10px 20px;">
                            <i class="fas fa-plus"></i> Skapa ett nytt projekt
                        </a>
                    }
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tillbaka till start</a>
                </div>
            </div>
        }
        else
        {
            <div class="projects-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;">
                @foreach (var project in Model)
                {
                    bool isMember = project.PersonProjects != null &&
                    ViewBag.CurrentPersonId != null &&
                    project.PersonProjects.Any(pp => pp.PersonId == (int)ViewBag.CurrentPersonId);

                    <div class="project-card" style="position: relative; background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.08); display: flex; flex-direction: column; min-height: 400px; border: 1px solid #eee;">

                        <a asp-action="ProjectDetails" asp-route-id="@project.Id" style="text-decoration: none; color: inherit;">
                            <div class="project-card-image" style="width: 100%; height: 160px; background-color: #f0f2f5; display: flex; justify-content: center; align-items: center; border-bottom: 1px solid #f0f0f0;">
                                @if (!string.IsNullOrEmpty(project.ImageUrl))
                                {
                                    <img src="@Url.Content("~/images/projects/" + project.ImageUrl)" alt="@project.ProjectName" style="width: 100%; height: 100%; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/images/projects/defaultbildProjekt.jpg" alt="Projektbild" style="width: 100%; height: 100%; object-fit: cover;" />
                                }
                                @* else
                                {
                                    <i class="fas fa-project-diagram" style="font-size: 3rem; color: #cbd5e0;"></i>
                                } *@
                            </div>

                            <div style="padding: 20px 20px 5px 20px;">
                                <span style="font-weight: 800; display: block; color: #002d5a; font-size: 1.2rem; line-height: 1.2; margin-bottom: 4px;">@project.ProjectName</span>
                                <span style="font-size: 0.85rem; color: #3498db; font-weight: 700; text-transform: uppercase;">
                                    <i class="fas fa-user-shield" style="font-size: 0.8rem;"></i> Ägare: @project.Owner?.FirstName @project.Owner?.LastName
                                </span>
                            </div>
                        </a>

                        <div style="padding: 5px 20px 20px 20px; flex-grow: 1; display: flex; flex-direction: column;">
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; font-size: 0.8rem; color: #4a5568; margin-bottom: 15px;">
                                <div><i class="fas fa-layer-group"></i> <strong>Typ:</strong> @(project.Type ?? "Webb")</div>
                                <div><i class="fas fa-circle" style="color: @(project.Status == "Aktivt" ? "#48bb78" : "#a0aec0"); font-size: 0.6rem;"></i> <strong>Status:</strong> @(project.Status ?? "Aktivt")</div>
                                <div><i class="fas fa-calendar-alt"></i> <strong>Start:</strong> @project.StartDate.ToString("yyyy-MM-dd")</div>
                                <div><i class="fas fa-calendar-check"></i> <strong>Slut:</strong> @(project.EndDate.HasValue? project.EndDate.Value.ToString("yyyy-MM-dd") : "Pågående")</div>
                            </div>

                            <div style="margin-top: auto; padding-top: 15px; display: flex; align-items: center; justify-content: space-between; border-top: 1px solid #f0f2f5;">
                                <div style="background: #ebf5ff; padding: 4px 10px; border-radius: 20px; color: #2b6cb0; font-weight: 600; font-size: 0.75rem;">
                                    <i class="fas fa-users"></i> @(project.PersonProjects?.Count ?? 0) deltagare
                                </div>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (isMember)
                                    {
                                        <button class="btn btn-sm" disabled style="background-color: #95a5a6; color: white; border: none; font-weight: 600; border-radius: 6px;">
                                            <i class="fas fa-check"></i> Är med
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-success btn-sm" style="font-weight: 600; border-radius: 6px;"
                                                onclick="showJoinPopup(@project.Id, '@project.ProjectName')">
                                            Gå med
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@* --- MODAL FÖR ATT ANGE ROLL --- *@
<div class="modal fade" id="joinRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #002d5a; color: white;">
                <h5 class="modal-title">Ange din roll</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="JoinProject" asp-controller="Project" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p id="modalProjectText" class="fw-bold"></p>
                    <input type="hidden" name="projectId" id="modalProjectId" />

                    <div class="mb-3">
                        <label class="form-label">Vad är din roll i detta projekt?</label>
                        <input type="text" name="role" class="form-control" placeholder="t.ex. Frontend-utvecklare, Tester..." required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                    <button type="submit" class="btn btn-success">Gå med</button>
                </div>
            </form>
        </div>
    </div>
</div>
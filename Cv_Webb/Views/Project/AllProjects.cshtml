@model IEnumerable<CV_siten.Data.Models.Project>

<div class="yellow-box welcome-area" style="max-width: 900px; margin: 20px auto; padding: 30px;">
    <h2 style="color: #002d5a;"><i class="fas fa-list-ul"></i> Alla Projekt</h2>
    <p class="text-muted">Här listas samtliga projekt som finns registrerade på CV-siten.</p>
    <hr />

    @if (!Model.Any())
    {
        <div class="text-center p-5">
            <p class="lead text-muted">Det finns inga projekt registrerade just nu.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tillbaka till start</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var project in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100 shadow-sm" style="border-left: 5px solid #0056b3;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: #002d5a; font-weight: bold;">@project.ProjectName</h5>

                            <p class="small text-muted mb-2">
                                <i class="fas fa-user-edit"></i> Skapat av: @project.Owner?.FirstName @project.Owner?.LastName
                            </p>

                            <p class="card-text text-muted" style="font-size: 0.9rem; flex-grow: 1;">
                                @(project.Description?.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)
                            </p>

                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <span class="badge bg-light text-dark">Start: @project.StartDate.ToString("yyyy-MM-dd")</span>

                                <a asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@project.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle"></i> Visa detaljer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Tillbaka till start</a>
        </div>
    }
</div>
@model CV_siten.Models.ViewModels.EditProjectViewModel

@{
    ViewData["Title"] = "Redigera projekt";
}

<div class="main-box welcome-area edit-project-card">
    <h2>Redigera projekt</h2>
    <p class="text-muted">Uppdatera information, bild eller källkod för <strong>@Model.ProjectName</strong></p>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        <input type="hidden" asp-for="ZipUrl" />

        <div class="row">
            @* --- PROJEKTBILD --- *@
            <div class="col-md-12 mb-4 text-center">
                <label class="d-block mb-2 fw-bold">Projektbild</label>

                @* Container för bilden *@
                <div class="mb-2 d-flex justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img id="projectImagePreview"
                             src="@Url.Content("~/images/projects/" + Model.ImageUrl)"
                             class="img-thumbnail edit-project-image"
                             style="max-width: 100%; height: auto; max-height: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        @* Om ingen bild finns, visa placeholder ELLER en dold bild som JS kan tända *@
                        <img id="projectImagePreview"
                             src=""
                             class="img-thumbnail edit-project-image"
                             style="display:none; max-width: 100%; height: auto; max-height: 300px; object-fit: cover;" />

                        <div id="projectImagePlaceholder" class="edit-project-image-placeholder p-4 border rounded bg-light text-muted">
                            <i class="bi bi-image fs-1"></i>
                            <p class="mb-0">Ingen bild vald</p>
                        </div>
                    }
                </div>

                @* Filväljare med rätt ID för JavaScript *@
                <input type="file" asp-for="ImageFile" id="projectImageInput" class="form-control mt-2" accept="image/*" />
            </div>

            @* --- GRUNDUPPGIFTER --- *@
            <div class="col-md-12 mb-3">
                <label asp-for="ProjectName" class="form-label fw-bold">Projektnamn</label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Type" class="form-label fw-bold">Typ</label>
                <input asp-for="Type" class="form-control" placeholder="t.ex. Webbapplikation" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Status" class="form-label fw-bold">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Aktivt">Aktivt</option>
                    <option value="Avslutat">Avslutat</option>
                    <option value="Pausat">Pausat</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="StartDate" class="form-label fw-bold">Startdatum:</label>
                <input asp-for="StartDate" type="date" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="EndDate" class="form-label fw-bold">Slutdatum:</label>
                <input asp-for="EndDate" type="date" class="form-control" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            @* --- KÄLLKOD (ZIP) --- *@
            <div class="col-md-12 mb-4">
                <div class="p-3 border rounded bg-light">
                    <label class="form-label fw-bold">
                        <i class="fas fa-file-archive text-warning"></i> Uppdatera Källkod (.zip)
                    </label>

                    @if (!string.IsNullOrEmpty(Model.ZipUrl))
                    {
                        <p class="small text-success"><i class="fas fa-check"></i> Nuvarande fil: @Model.ZipUrl</p>
                    }

                    <input type="file" asp-for="ZipFile" class="form-control" accept=".zip,.rar,.7z" />
                </div>
            </div>

            <div class="col-md-12 mb-4">
                <label asp-for="Description" class="form-label fw-bold">Beskrivning</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
        </div>

        @* --- KNAPPAR --- *@
        <div class="d-grid gap-2 mb-3">
            <button type="submit" class="btn btn-primary edit-project-save-btn">
                <i class="fas fa-save"></i> Spara ändringar
            </button>
            <a asp-action="ProjectDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Avbryt</a>
        </div>
    </form>
</div>

@* --- POPUP FÖR SPARADE ÄNDRINGAR --- *@
@* Vi kollar efter SuccessMessage och visar popupen om det finns *@
@if (TempData["SuccessMessage"] != null)
{
    <div id="saveSuccessPopup"
         class="success-popup-overlay"
         style="display:flex;">
        @* Tvinga visning direkt eftersom vi laddar om sidan *@

        <div class="success-popup-content">
            <i class="bi bi-check-circle-fill add-project-success-icon"></i>
            <h3>Projektet har uppdaterats!</h3>
            <p>Du skickas nu tillbaka till projektsidan...</p>
        </div>
    </div>

    @* Sätter redirect-url till detaljsidan *@
    <div id="popup-data"
         data-show="true"
         data-url="@Url.Action("ProjectDetails", new { id = Model.Id })">
    </div>
}
@model IEnumerable<CV_siten.Data.Models.Project>

<div class="yellow-box welcome-area" style="max-width: 900px; margin: 20px auto; padding: 30px;">
    <h2 style="color: #002d5a;"><i class="fas fa-project-diagram"></i> Gå med i projekt</h2>
    <p class="text-muted">Här kan du välja att gå med i befintliga projekt på siten.</p>
    <hr />


    @if (!Model.Any())
    {
        <div class="text-center p-5">
            <p class="lead text-muted">Det finns inga nya projekt att gå med i just nu.</p>
            <a asp-controller="Person" asp-action="Profile" class="btn btn-secondary">Tillbaka till min profil</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var project in Model)
            {

                @* --- HÄR --- *@
                <p class="small text-muted mb-3">
                    <i class="fas fa-user-edit" style="font-size: 0.8rem;"></i>
                    Skapat av: @project.Owner?.FirstName @project.Owner?.LastName
                </p>
                <div class="col-md-6 mb-3">
                    <div class="card h-100 shadow-sm" style="border-left: 5px solid #0056b3;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: #002d5a; font-weight: bold;">@project.ProjectName</h5>
                            <p class="card-text text-muted" style="font-size: 0.9rem; flex-grow: 1;">
                                @(project.Description?.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)
                            </p>
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <span class="badge bg-light text-dark">Start: @project.StartDate.ToString("yyyy-MM-dd")</span>

                                <form asp-action="Join" asp-controller="Project" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="projectId" value="@project.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fas fa-plus-circle"></i> Gå med
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <a asp-controller="Person" asp-action="Profile" class="btn btn-outline-secondary">Avbryt</a>
        </div>
    }
</div>
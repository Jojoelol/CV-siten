@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CV_siten</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CV-siten.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header">
        <div class="header-content">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="CV-siten Logotyp" style="height: 45px; width: auto;" asp-append-version="true" />
                </a>
            </div>
            <form class="search-bar" asp-controller="Home" asp-action="Search" method="get">
                <input type="text" name="search" placeholder="Sök efter projekt eller personer..." />
                <button type="submit">Sök</button>
            </form>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="logged-in-info">
                    <span class="logged-in-text">Inloggad som: @User.Identity.Name</span>

                    <form class="login" asp-controller="Person" asp-action="Profile" method="get">
                        <button type="submit">Min profil</button>
                    </form>

                    <form class="login" asp-controller="Message" asp-action="Inbox" method="get">
                        <button type="submit">Meddelanden</button>
                    </form>

                    <form class="login" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit">Logga ut</button>
                    </form>
                </div>
            }
            else
            {
                <form class="login" asp-controller="Account" asp-action="Login" method="get">
                    <button type="submit">Logga in</button>
                </form>
            }
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container text-center">
            &#169; 2026 - CV_siten
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@using Microsoft.AspNetCore.Http
@using CV_siten.Data.Data
@using CV_siten.Data.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CV_siten</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CV-siten.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header class="main-header">
        <div class="header-content layout-header-content">

            @* Logo *@
            <div class="logo layout-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png"
                         alt="CV-siten Logotyp"
                         class="layout-logo-img"
                         asp-append-version="true" />
                </a>
            </div>

            @* Utökad sökbar (VG-krav #6) *@
            <form class="search-bar layout-searchbar"
                  asp-controller="Home" asp-action="Search" method="get">
                <input type="text" name="search" value="@ViewBag.SearchQuery"
                       placeholder="Sök efter namn..." class="form-control layout-search-input" />
                <input type="text" name="skill" value="@ViewBag.SkillQuery"
                       placeholder="Kompetens (t.ex. .Net)..." class="form-control layout-search-input" />
                <button type="submit" class="btn btn-outline-primary">Sök</button>
            </form>

            @* räknar olästa meddelanden *@
            @{
                var unreadCount = 0;
                string displayName = User.Identity?.Name; // Standardfall: E-post

                if (User.Identity?.IsAuthenticated == true)
                {
                    var user = await UserManager.GetUserAsync(User);
                    if (user != null)
                    {
                        var me = await Db.Persons.FirstOrDefaultAsync(p => p.IdentityUserId == user.Id);
                        if (me != null)
                        {
                            unreadCount = await Db.Messages.CountAsync(m => m.ReceiverId == me.Id && !m.IsRead);
                            displayName = $"{me.FirstName} {me.LastName}";
                        }
                    }
                }
            }

            @* Inloggningsinformation *@
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="logged-in-info layout-logged-in-info">
                    <span class="logged-in-text">Inloggad som: @displayName</span>

                    <form class="login" asp-controller="Person" asp-action="Profile" asp-route-id="MyProfile" method="get">
                        <button type="submit">Min profil</button>
                    </form>

                    <form class="login" asp-controller="Message" asp-action="Inbox" method="get">
                        <button type="submit" class="msg-btn">
                            Meddelanden
                            @if (unreadCount > 0)
                            {
                                <span class="msg-badge">@unreadCount</span>
                            }
                        </button>
                    </form>

                    <form class="login" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit">Logga ut</button>
                    </form>
                </div>
            }
            else
            {
                <div class="logged-in-info layout-logged-in-info">
                    <form class="login" asp-controller="Message" asp-action="Inbox" method="get">
                        <button type="submit">Meddelanden</button>
                    </form>

                    <form class="login" asp-controller="Account" asp-action="Login" method="get">
                        <button type="submit">Logga in</button>
                    </form>
                </div>
            }
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container text-center">
            &#169; 2026 - CV_siten
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

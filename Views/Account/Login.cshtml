@model CV_siten.Models.LoginViewModel

<div class="yellow-box welcome-area" style="max-width: 500px; margin: 20px auto;">
    <h2>Inloggning</h2>
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="form-group">
            <label>E-post</label>
            <input asp-for="Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Lösenord</label>
            <input asp-for="Losenord" type="password" class="form-control" required />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Logga in</button>
    </form>

    <div class="mt-3 text-center">
        <p>Saknar du konto? <a asp-controller="Account" asp-action="CreateAccount">Skapa ett konto här</a></p>
    </div>

    @if (ViewBag.Error != null)
    {
        <p style="color: red; margin-top: 10px;">@ViewBag.Error</p>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }
</div>
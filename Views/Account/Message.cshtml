@using CV_siten.Models.ViewModels
@{
    ViewData["Title"] = "Mina meddelanden";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            
            <!--TEST -->
            <div class="mb-3">
                <button type="button"
                        class="btn btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#sendMessageModal">
                    Skicka meddelande
                </button>
            </div>
            <div class="yellow-box p-4" style="border: 2px solid #ffd800; border-radius: 8px; background-color: #fffbe6;">
                <h2 class="mb-4">Mina meddelanden</h2>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Från</th>
                                <th>Meddelande</th>
                                <th>Datum</th>
                                <th>Status</th>
                                <th>Åtgärd</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var m in Model)
                                {
                                    <tr class="@(m.ArLast ? "" : "table-light")">
                                        <td><strong>@m.Avsandare?.Fornamn @m.Avsandare?.Efternamn</strong></td>
                                        <td>@m.Innehall</td>
                                        <td>@m.Tidsstampel.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            @if (m.ArLast)
                                            {
                                                <span class="badge bg-secondary">Läst</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">Nytt</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!m.ArLast)
                                            {
                                                <form asp-controller="Message" asp-action="MarkRead" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@m.Id" />
                                                    <button class="btn btn-sm btn-outline-dark">Markera läst</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-5">
                                        <i>Du har inga fler meddelanden just nu.</i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Skicka meddelande -->
    <div class="modal fade" id="sendMessageModal" tabindex="-1" aria-labelledby="sendMessageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <form asp-controller="Message" asp-action="Send" method="post">
                    @Html.AntiForgeryToken()

                    <div class="modal-header">
                        <h5 class="modal-title" id="sendMessageModalLabel">Skicka meddelande</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Stäng"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Skicka till (PersonId)</label>
                            <input class="form-control"
                                   type="number"
                                   name="MottagareId"
                                   placeholder="Ex: 1"
                                   required />
                            <div class="form-text">
                                (För test: skriv Person.Id på den du vill skicka till)
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Meddelande</label>
                            <textarea class="form-control"
                                      name="Innehall"
                                      rows="4"
                                      placeholder="Skriv ditt meddelande..."
                                      required></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                        <button type="submit" class="btn btn-primary">Skicka</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
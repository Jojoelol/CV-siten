@model CV_siten.Models.CreateAccountViewModel

@{
    ViewData["Title"] = "Skapa konto";
}

<div class="yellow-box welcome-area" style="max-width: 600px; margin: 20px auto; padding: 30px;">
    <h2>Skapa ett nytt konto</h2>
    <p>Fyll i dina uppgifter för att börja bygga din profil.</p>
    <hr />

    <form asp-controller="Home" asp-action="CreateAccount" method="post">
        @* Visar sammanfattning av valideringsfel *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="Fornamn" class="control-label"></label>
                <input asp-for="Fornamn" class="form-control" />
                <span asp-validation-for="Fornamn" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Efternamn" class="control-label"></label>
                <input asp-for="Efternamn" class="form-control" />
                <span asp-validation-for="Efternamn" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Telefonnummer" class="control-label"></label>
            <input asp-for="Telefonnummer" class="form-control" />
            <span asp-validation-for="Telefonnummer" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Yrkestitel" class="control-label"></label>
            <input asp-for="Yrkestitel" class="form-control" placeholder="t.ex. Systemutvecklare" />
            <span asp-validation-for="Yrkestitel" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Beskrivning" class="control-label"></label>
            <textarea asp-for="Beskrivning" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Beskrivning" class="text-danger"></span>
        </div>

        <div class="row mt-2">
            <div class="col-md-6 form-group">
                <label asp-for="Losenord" class="control-label"></label>
                <input asp-for="Losenord" class="form-control" />
                <span asp-validation-for="Losenord" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="BekraftaLosenord" class="control-label"></label>
                <input asp-for="BekraftaLosenord" class="form-control" />
                <span asp-validation-for="BekraftaLosenord" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary w-100">Registrera konto</button>
        </div>
    </form>

    <div class="mt-3 text-center">
        <p>Har du redan ett konto? <a asp-action="Login">Logga in här</a></p>
    </div>
</div>

@section Scripts {
    @* Aktiverar validering direkt i webbläsaren *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["Title"] = "Startsida";
}

<div class="background">
    <div class="yellow-box welcome-area">
        <p>Välkommen till vår CV site...</p>
    </div>

    <div class="yellow-box profile-area">
        <div class="profile-grid" asp-controller="Home" asp-action="Profile" method="get">
            <div class="name-title-pic">
                <p class="name">@(Model?.Fornamn ?? "Okänd") @(Model?.Efternamn ?? "Användare")</p>
                <p class="title">Titel</p>
                <div class="pic-placeholder">Profilbild</div>
            </div>

            <div class="white-box desc-box">Kort beskrivning</div>

            <div class="projects-list">
                @if (ViewBag.SenasteProjekt != null)
                {
                    <div class="project-pill">
                        <strong>Senaste:</strong> @ViewBag.SenasteProjekt.Projektnamn
                    </div>
                    @* Här kan du även visa beskrivningen om du vill *@
                    <div style="font-size: 0.8em; color: gray;">
                        @ViewBag.SenasteProjekt.Beskrivning
                    </div>
                }
                else
                {
                    <div class="project-pill">Inga projekt hittades</div>
                }
            </div>
        </div>
    </div>
</div>
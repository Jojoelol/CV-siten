@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CV_siten</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CV-siten.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header">
        <div class="header-content">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="CV-siten Logotyp" style="height: 45px; width: auto;" asp-append-version="true" />
                </a>
            </div>
            <form class="search-bar" asp-controller="Home" asp-action="Search" method="get">
                <input type="text" name="q" placeholder="" />
                <button type="submit">Sök</button>
            </form>

            @* Här börjar logiken för inloggad/utloggad *@
            @{
                var anvandareId = HttpContextAccessor.HttpContext?.Session.GetInt32("AnvandareId");
                var anvandareNamn = HttpContextAccessor.HttpContext?.Session.GetString("AnvandareNamn");
            }

            @if (anvandareId != null)
            {
                <div class="logged-in-info">
                    <span class="logged-in-text">Inloggad som: @anvandareNamn</span>

                    @* Redigera profil-knapp med samma styling som logga in *@
                    <form class="login" asp-controller="Account" asp-action="Edit" method="get">
                        <button type="submit">Redigera profil</button>
                    </form>

                    <form class="login" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit">Logga ut</button>
                    </form>
                </div>
            }
            else
            {
                @* Ursprunglig logga in-knapp *@
                <form class="login" asp-controller="Account" asp-action="Login" method="get">
                    <button type="submit">Logga in</button>
                </form>
            }
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div>&#169; 2025 - CV_siten</div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>